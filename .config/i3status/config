# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        interval = 1
        colors = true
        color_good = "#b5bd68"
        color_bad = "#cc6666"
        color_degraded = "#f0c674"
}

order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"
order += "ethernet tun0"
order += "path_exists google-drive"
order += "battery all"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "cpu_temperature 1"
order += "memory"
order += "tztime local"

volume master {
        format = "Vol: %volume"
        format_muted = "Mut: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

wireless _first_ {
        format_up = "WiFi: %ip"
        format_down = "WiFi: down"
}

ethernet _first_ {
        format_up = "Eth: %ip"
        format_down = "Eth: down"
}

ethernet tun0 {
        format_up = "Tun: %ip"
        format_down = "Tun: down"
}

path_exists google-drive {
	path = "/home/rnovatorov/google-drive/.mounted"
        format = "%title: %status"
}

battery all {
        format = "%status: %percentage %remaining"
        status_chr = "Chr"
        status_bat = "Bat"
	low_threshold = 15
}

cpu_usage {
        format = "CPU: %usage"
        max_threshold = 75
        degraded_threshold = 25
}

cpu_temperature 0 {
        format = "T0: %degrees °C"
        max_threshold = 86
        path = "/sys/class/hwmon/hwmon4/temp1_input"
}

cpu_temperature 1 {
        format = "T1: %degrees °C"
        max_threshold = 86
        path = "/sys/class/hwmon/hwmon4/temp2_input"
}

memory {
        format = "Mem: %available"
        threshold_degraded = "1G"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
